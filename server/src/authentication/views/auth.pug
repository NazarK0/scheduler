- const action = type === "signIn" ? "signin": type === "signUp" ? "signup" : "/";

mixin signInInfo
  div
    label Ім'я*:
    input(type="text" name="name" value=name required)
  div
    label Категорія:
    select(name="user_type")
      each type in user_types
        option(value=type)=type
  div
    label Кафедра:
    input(type="text" name="cafedra" value=cafedra)
  div
    label Група:
    input(type="text" name="group" value=group)

doctype html
html(lang="uk")
  head
    title=title
  body
    if message
      p=message
    form(action=action method="post" autocomplete="off")
      case type
        when 'signUp'
          +signInInfo
      - if (type === 'signIn' || type === 'signUp')
        div
          label E-mail:
          input(type="email" name="email" value=email required)
        div
          label Пароль:
          input(type="password" name="password" required)
      case type
        when 'signUp'
          div
            label Пароль ще раз:
            input(type="password" name="password2" required)
          a(href="/signin") Увійти
        when 'signIn'
          a(href="/signup") Реєстрація

      button(type="submit")=title