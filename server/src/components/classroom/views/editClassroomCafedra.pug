extends ../../../global/views/layouts/mainCafedra.pug


block content

  style 
    include /styles/login.css
  - const title_page = mode === "edit" ? "Редагувати" : mode === "add" ? "Додати" : "";
  - const action = mode === "edit" ? `/admin/cafedra/classroom/edit/${data.id}`: mode === "add" ? `/admin/cafedra/classroom/add` : "/signin";
  - const value_name = data? data.name : "";
  - const value_seats = data? data.seats : "";
  - const value_description = data? data.description : "";
  h2=title_page
  div(class="container")
    form(action=action method="post")
      div(class="row")
        div(class="col-25")
          label Аудиторія*:
        div(class="col-75")
          input(type="text" name="name" value=value_name required)
      div(class="row")
        div(class="col-25")
          label Місць:
        div(class="col-75")
          input(type="number" name="seats" value=value_seats)
      div(class="row")
        div(class="col-25")
          label Опис:
        div(class="col-75")
          textarea( name="description")= value_description
      button(type="submit" class="signInButton") Зберегти