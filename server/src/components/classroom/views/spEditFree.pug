extends ../../../global/views/layouts/mainSp.pug

block content
  style
    include /styles/login.css
  h2(class="title")=`Вільна аудиторія №${data.classroom} станом на ${data.date} (${data.couple} пара)`
  div(class="container")
      form(action=`/admin/sp/cafedra/${data.cafedra_id}/classroom/${data.classroom}/couple/${data.couple}/free` method="post")
        //- input(type="hidden" name="couple" value=data.couple)
        input(type="hidden" name="date" value=data.date)
        div(class="row")
          div(class="col-25")
            label Група*:
          div(class="col-75")
            input(type="text" name="group" required)
        div(class="row")
          div(class="col-25")
            label Дисципліна:
          div(class="col-75")
            input(type="text" name="subject")
        div(class="row")
          div(class="col-25")
            label Заняття:
          div(class="col-75")
            input(type="text" name="lesson_type")
        div(class="row")
          div(class="col-25")
            label Викладач №1:
          div(class="col-75")
            input(type="text" name="teacher1")
        div(class="row")
          div(class="col-25")
            label Викладач №2:
          div(class="col-75")
            input(type="text" name="teacher2")
        div(class="row")
          div(class="col-25")
            label Додаткова аудиторія №:
          div(class="col-75")
            input(type="text" name="classroom2")
        button(type="submit" class="signInButton") Зберегти