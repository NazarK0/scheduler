extends ../../../global/views/layouts/mainCafedra.pug


block content

  style 
    include /styles/login.css
  - const title = mode === "edit" ? "Редагувати" : mode === "add" ? "Додати" : "";
  - const action = mode === "edit" ? `/admin/cafedra/classroom/edit/${data}`: mode === "add" ? `/admin/cafedra/classroom/add` : "/signin";
  - const value_title = data? data : "";
  h2=title
  div(class="container")
    form(action=action method="post")
      div(class="row")
        div(class="col-25")
          label Аудиторія*:
        div(class="col-75")
          input(type="text" name="new_title" value=value_title required)
      button(type="submit" class="signInButton") Зберегти